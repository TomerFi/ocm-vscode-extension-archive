{
	"name": "ocm-vs-extension",
	"displayName": "ocm-vs-extension",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ocm-vs-extension.ocmNewProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ocm-vs-extension.ocmNewProject",
				"title": "create OCM application-manager project",
				"category": "OCM"
			}
		],
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/cr.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run clean-build",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"copy-files": "mkdir out/templates/ && cp templates/* out/templates/",
		"clean": "rm -rf out",
		"prebuild": "npm run lint",
		"build": "npm run compile && npm run copy-files",
		"clean-build": "npm run clean && npm run build"
	},
	"dependencies": {
		"fs-extra": "^10.0.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	}
}
