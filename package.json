{
	"name": "ocm-vscode-extension",
	"version": "0.0.1",
	"displayName": "OCM Extension",
	"description": "OCM VSCode extension contributing commands and snippets",
	"publisher": "redhat-ecosystem-application-engineering",
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/ilan-pinto/ocm-vscode-extension/blob/main/README.md",
	"bugs": {
		"url": "https://github.com/ilan-pinto/ocm-vscode-extension/issues"
	},
	"icon": "images/icon.png",
	"private": true,
	"keywords": [
		"ocm",
		"open-cluster-management",
		"kubernetes",
		"openshift"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ilan-pinto/ocm-vscode-extension.git"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:ocm-vscode-extension.ocmNewProject"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ocm-vscode-extension.ocmNewProject",
				"title": "create an OCM application-manager project",
				"category": "OCM"
			}
		],
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/channel.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/managedclusterset.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/managedclustersetbinding.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/placement.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/subscription_git.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/subscription_objectbucket.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/subscription_helmrepo.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run clean:build",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"lint": "eslint src integration-tests --ext ts",
		"clean": "rm -rf out",
		"clean-ext": "rm -rf .vscode-test",
		"clean-test-ws": "find ./test-workspace/ -mindepth 1  ! -name '.gitkeep' -delete",
		"clean:all":"npm run clean && npm run clean-ext && npm run clean-test-ws",
		"preintegration-tests": "npm run compile",
		"integration-tests": "node ./out/integration-tests/runSuite.js",
		"prebuild": "npm run lint",
		"build": "npm run compile",
		"clean:build": "npm run clean && npm run build",
		"vsce:package": "vsce package"
	},
	"dependencies": {
		"fs-extra": "^10.0.1"
	},
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.2.0",
		"@types/js-yaml": "^4.0.5",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.x",
		"@types/sinon": "^10.0.11",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"@vscode/test-electron": "^2.1.3",
		"chai": "^4.3.6",
		"eslint": "^8.12.0",
		"glob": "^7.2.0",
		"js-yaml": "^4.1.0",
		"mocha": "^9.2.2",
		"sinon": "^13.0.1",
		"typescript": "^4.6.3",
		"vsce": "^2.7.0"
	}
}
